<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- vo객체는 값을 운반하는 목적의 객체이기때문에 스프링 bean으로 등록하는경우는 거의 없다 
		 해당 설정 파일은 date 필드의 값을 주입하는 예제를 위해 vo객체를 스프링 bean으로 등록한다-->
	<bean id="userVo" class="kr.or.ddit.user.model.UserVo">
		<!-- userId속성에 brown값을setter 주입한다 -->
		<property name="userId" value="brown"/>
		
		<!-- birth속성에 2019-08-08값을setter 주입한다 -->
		<property name="birth" value="2019-08-08"/>
	</bean>
<!-- 	<bean id ="dateEditor" class="org.springframework.beans.propertyeditors.CustomDateEditor">
		<constructor-arg>
			<bean class="java.text.SimpleDateFormat">
				<constructor-arg value="yyyy-MM-dd"/>
			</bean>
		</constructor-arg>
		
		<constructor-arg value="true"/>
	</bean> -->
	
	<bean id="customEditorConfigurer" class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="propertyEditorRegistrars">
			<bean class="kr.or.ddit.typeConvert.CustomDateRegistry"/>
		</property>
	</bean>
	
</beans>
